<div class="{{CSS_PREFIX}}popup">
    <div class="{{CSS_PREFIX}}popup-container">
        {{! 날짜 }}
        <div class="{{CSS_PREFIX}}popup-section">
            <div class="{{CSS_PREFIX}}popup-section-item {{CSS_PREFIX}}section-start-date">
                <span class="{{CSS_PREFIX}}icon {{CSS_PREFIX}}ic-date"></span>
                <input id="{{CSS_PREFIX}}schedule-start-date" class="{{CSS_PREFIX}}content" placeholder="{{startDatePlaceholder-tmpl}}" style="background:none;" autocomplete="off" />
                <div id="{{CSS_PREFIX}}startpicker-container" style="margin-left: -1px; position: relative"></div>
            </div>
            <span class="{{CSS_PREFIX}}section-date-dash">-</span>
            <div class="{{CSS_PREFIX}}popup-section-item {{CSS_PREFIX}}section-end-date">
                <span class="{{CSS_PREFIX}}icon {{CSS_PREFIX}}ic-date"></span>
                <input id="{{CSS_PREFIX}}schedule-end-date" class="{{CSS_PREFIX}}content" placeholder="{{endDatePlaceholder-tmpl}}" style="background:none;" autocomplete="off" />
                <div id="{{CSS_PREFIX}}endpicker-container" style="margin-left: -1px; position: relative"></div>
            </div>
            <div class="{{CSS_PREFIX}}popup-section-item {{CSS_PREFIX}}section-allday" style="display: none;">
                <input id="{{CSS_PREFIX}}schedule-allday" type="checkbox" class="{{CSS_PREFIX}}checkbox-square"{{#if isAllDay}} checked{{/if}} autocomplete="off" />
                <span class="{{CSS_PREFIX}}icon {{CSS_PREFIX}}ic-checkbox"></span>
                <span class="{{CSS_PREFIX}}content">{{{popupIsAllDay-tmpl}}}</span>
            </div>
        </div>

        {{! 장소 }}
        <div class="{{CSS_PREFIX}}popup-section" style="width: 438px;">
            <div class="{{CSS_PREFIX}}popup-section-item {{CSS_PREFIX}}section-location" style="width: 200px; float: left;">
                <span class="{{CSS_PREFIX}}icon {{CSS_PREFIX}}ic-location"></span>
                <input type="radio" name="meetingPlace" id="{{CSS_PREFIX}}meeting-place-0" class="{{CSS_PREFIX}}meeting-place" value="0" style="background:none;width: auto; margin-top: 0px;" {{#if place_0_checked}}checked{{/if}}><span class="{{CSS_PREFIX}}meeting-place-text">대회의실</span>
                <input type="radio" name="meetingPlace" id="{{CSS_PREFIX}}meeting-place-1" class="{{CSS_PREFIX}}meeting-place" value="1" style="background:none;width: auto; margin-top: 0px;" {{#if place_1_checked}}checked{{/if}}><span class="{{CSS_PREFIX}}meeting-place-text">소회의실</span>
            </div>
            <div class="{{CSS_PREFIX}}popup-section-item {{CSS_PREFIX}}section-gubun" style="width: 200px; float: left; margin-left: 13px">
                <span class="{{CSS_PREFIX}}icon {{CSS_PREFIX}}ic-gubun"></span>
                <input type="radio" name="gubun" id="{{CSS_PREFIX}}gubun-0" class="{{CSS_PREFIX}}meeting-place" value="0" style="background:none;width: auto; margin-top: 0px;" {{#if gubun_1_checked}}{{else}}checked{{/if}}><span class="{{CSS_PREFIX}}meeting-place-text">내부회의</span>
                <input type="radio" name="gubun" id="{{CSS_PREFIX}}gubun-1" class="{{CSS_PREFIX}}meeting-place" value="1" style="background:none;width: auto; margin-top: 0px;" {{#if gubun_1_checked}}checked{{/if}}><span class="{{CSS_PREFIX}}meeting-place-text">외부회의</span>
            </div>
        </div>

        {{! 부서 }}
        <div class="{{CSS_PREFIX}}popup-section {{CSS_PREFIX}}dropdown {{CSS_PREFIX}}close {{CSS_PREFIX}}section-calendar{{#unless calendars.length}} {{CSS_PREFIX}}hide{{/unless}}" style="width: 200px;">
            <button class="{{CSS_PREFIX}}button {{CSS_PREFIX}}dropdown-button {{CSS_PREFIX}}popup-section-item" style="width: 100%;">
                <span class="{{CSS_PREFIX}}icon {{CSS_PREFIX}}calendar-dot" style="background-color: {{selectedCal.bgColor}}"></span>
                <span id="{{CSS_PREFIX}}schedule-calendar" class="{{CSS_PREFIX}}content" style="width: 148px;">{{selectedCal.name}}</span>
                <span class="{{CSS_PREFIX}}icon {{CSS_PREFIX}}dropdown-arrow"></span>
            </button>
            <ul class="{{CSS_PREFIX}}dropdown-menu" style="z-index: {{zIndex}}">
                {{#each calendars}}
                    <li class="{{CSS_PREFIX}}popup-section-item {{CSS_PREFIX}}dropdown-menu-item" data-calendar-id="{{id}}">
                        <span class="{{CSS_PREFIX}}icon {{CSS_PREFIX}}calendar-dot" style="background-color: {{bgColor}}"></span>
                        <span class="{{CSS_PREFIX}}content">{{name}}</span>
                    </li>
                {{/each}}
            </ul>
        </div>

        {{! 예약자 }}
        <div class="{{CSS_PREFIX}}popup-section">
            <div class="{{CSS_PREFIX}}popup-section-item {{CSS_PREFIX}}section-title-x" style="width: 200px;">
            <span class="{{CSS_PREFIX}}icon {{CSS_PREFIX}}ic-user-b" style="width: 13px;"></span>
                <input id="{{CSS_PREFIX}}user_name" class="{{CSS_PREFIX}}content" placeholder="예약자명" value="{{userName}}" style="background:none; width: 156px;" autocomplete="off" />
            </div>
            <button id="{{CSS_PREFIX}}schedule-private" class="{{CSS_PREFIX}}button {{CSS_PREFIX}}section-private{{#unless isPrivate}} {{CSS_PREFIX}}public{{/unless}}" style="display: none;">
            <span class="{{CSS_PREFIX}}icon {{CSS_PREFIX}}ic-private"></span>
            </button>
        </div>

        {{! 메모 }}
        <div class="{{CSS_PREFIX}}popup-section" style="width: 412.86px;">
            <div class="{{CSS_PREFIX}}popup-section-item {{CSS_PREFIX}}section-title">
            <span class="{{CSS_PREFIX}}icon {{CSS_PREFIX}}ic-title"></span>
                <input id="{{CSS_PREFIX}}schedule-title" class="{{CSS_PREFIX}}content" placeholder="{{titlePlaceholder-tmpl}}" value="{{title}}" style="background:none; width: 365px" autocomplete="off" />
            </div>
            <button id="{{CSS_PREFIX}}schedule-private" class="{{CSS_PREFIX}}button {{CSS_PREFIX}}section-private{{#unless isPrivate}} {{CSS_PREFIX}}public{{/unless}}" style="display: none;">
            <span class="{{CSS_PREFIX}}icon {{CSS_PREFIX}}ic-private"></span>
            </button>
        </div>

        <div class="{{CSS_PREFIX}}popup-section" style="display: none;">
            <div class="{{CSS_PREFIX}}popup-section-item {{CSS_PREFIX}}section-location">
            <span class="{{CSS_PREFIX}}icon {{CSS_PREFIX}}ic-location"></span>
                <input id="{{CSS_PREFIX}}schedule-location" class="{{CSS_PREFIX}}content" placeholder="{{locationPlaceholder-tmpl}}" value="{{location}}" autocomplete="off" />
            </div>
        </div>
        
        
        <div class="{{CSS_PREFIX}}popup-section {{CSS_PREFIX}}dropdown {{CSS_PREFIX}}close {{CSS_PREFIX}}section-state" style="display: none;">
            <button class="{{CSS_PREFIX}}button {{CSS_PREFIX}}dropdown-button {{CSS_PREFIX}}popup-section-item">
                <span class="{{CSS_PREFIX}}icon {{CSS_PREFIX}}ic-state"></span>
                <span id="{{CSS_PREFIX}}schedule-state" class="{{CSS_PREFIX}}content">{{#if state}}{{state}}{{else}}{{{popupStateBusy-tmpl}}}{{/if}}</span>
                <span class="{{CSS_PREFIX}}icon {{CSS_PREFIX}}dropdown-arrow"></span>
            </button>
            <ul class="{{CSS_PREFIX}}dropdown-menu" style="z-index: {{zIndex}}">
                <li class="{{CSS_PREFIX}}popup-section-item {{CSS_PREFIX}}dropdown-menu-item">
                <span class="{{CSS_PREFIX}}icon {{CSS_PREFIX}}none"></span>
                <span class="{{CSS_PREFIX}}content">{{{popupStateBusy-tmpl}}}</span>
                </li>
                <li class="{{CSS_PREFIX}}popup-section-item {{CSS_PREFIX}}dropdown-menu-item">
                <span class="{{CSS_PREFIX}}icon {{CSS_PREFIX}}none"></span>
                <span class="{{CSS_PREFIX}}content">{{{popupStateFree-tmpl}}}</span>
                </li>
            </ul>
        </div>
        <button class="{{CSS_PREFIX}}button {{CSS_PREFIX}}popup-close"><span class="{{CSS_PREFIX}}icon {{CSS_PREFIX}}ic-close"></span></button>
        <div class="{{CSS_PREFIX}}section-button-save"><button class="{{CSS_PREFIX}}button {{CSS_PREFIX}}confirm {{CSS_PREFIX}}popup-save"><span>{{#if isEditMode}}{{{popupUpdate-tmpl}}}{{else}}{{{popupSave-tmpl}}}{{/if}}</span></button></div>
    </div>
    <div id="{{CSS_PREFIX}}popup-arrow" class="{{CSS_PREFIX}}popup-arrow {{CSS_PREFIX}}arrow-bottom">
        <div class="{{CSS_PREFIX}}popup-arrow-border">
            <div class="{{CSS_PREFIX}}popup-arrow-fill"></div>
        </div>
    </div>
</div>
